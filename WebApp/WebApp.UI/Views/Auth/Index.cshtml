@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

@model LoginRequestDto
<!--begin::Body-->
<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
    <!--begin::Wrapper-->
    <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
        <!--begin::Content-->
        <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
            <!--begin::Wrapper-->
            <div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">
                <!--begin::Form-->
                @using (Html.BeginRouteForm("PostLogin", FormMethod.Post, new { @id = "kt_sign_in_form", @class = "form w-100" }))
                {
                    @Html.AntiForgeryToken()

                    <!--begin::Heading-->
                    <div class="text-center mb-11">

                        <img asp-append-version="true" class="theme-light-show mx-auto mw-100 w-100px w-lg-100px mb-10 mb-lg-10" src="assets/media/auth/agency.png" alt="" />

                        <!--begin::Title-->
                        <h1 class="text-gray-800 fw-bold mb-3">Sign In to CMS 1.0</h1>
                        <!--end::Title-->
                        <!--begin::Subtitle-->

                        <div class="mb-10 bg-light-info p-2">
                            <span class="text-info">
                                Enter your <strong>email</strong> and <strong>password</strong> to continue.
                            </span>
                        </div>

                        <!--end::Subtitle=-->
                    </div>
                    <!--begin::Heading-->
                    <!--begin::Input group=-->
                    <div class="fv-row mb-8">
                        <!--begin::Email-->
                    @Html.TextBoxFor(m=> m.Username, new {@type="text", @placeholder="Username", @name="Username", @autocomplete="off", @class="form-control bg-transparent"})
                        <!--end::Email-->
                    </div>
                    <!--end::Input group=-->
                    <div class="fv-row mb-8">
                        <!--begin::Password-->
                    @Html.PasswordFor(m=> m.Password, new {@type="password", @placeholder="Password", @name="Password", @autocomplete="off", @class="form-control bg-transparent"})
                        <!--end::Password-->
                    </div>
                    <!--end::Input group=-->
                    <!--begin::Submit button-->
                    <div class="d-grid mb-10">
                                                
                        <button type="submit" class="btn btn-success" id="kt_sign_in_submit">
                            <!--begin::Indicator label-->
                            <span class="indicator-label">Sign In</span>
                            <!--end::Indicator label-->
                            <!--begin::Indicator progress-->
                            <span class="indicator-progress">
                                Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                            <!--end::Indicator progress-->
                        </button>
                    </div>
                    <!--end::Submit button-->
                    <!--begin::Sign up-->
                    <div class="text-gray-500 text-center fw-semibold fs-6">
                        Don't remember your password?
                        <strong><a href="forgot-password" class="text-gray-800">Click here.</a></strong>
                    </div>
                    <!--end::Sign up-->
                }
                <!--end::Form-->

            </div>
            <!--end::Wrapper-->
            <!--begin::Footer-->
            <div class="d-flex flex-center">

                <!--begin::Links-->
                <div class="d-flex fw-semibold fs-base gap-5">
                    <a href="forgot-password" target="_blank" class="text-gray-700">Terms & Conditions</a>
                    <span class="text-gray-700">|</span>
                    <a href="forgot-password" target="_blank" class="text-gray-700">Policy</a>
                    <span class="text-gray-700">|</span>
                    <a href="forgot-password" target="_blank" class="text-gray-700">Contact Us</a>
                </div>
                <!--end::Links-->
            </div>
            <!--end::Footer-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Wrapper-->
</div>
 