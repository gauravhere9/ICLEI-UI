@using WebApp.Global.Helpers;
@using WebApp.DTOs.Branches.Response;
@using WebApp.Global.Shared;

@{
    ViewData["Title"] = "Branches";
    Layout = "_Layout";

    SortingHelper? sorting = (SortingHelper?)ViewData["Sort"];
}

@model PagedResponseDto<BranchResponseDto>

<div class="card">
    <!--begin::Card header-->
    <div class="card-header border-0 pt-6">
        <!--begin::Card title-->
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                    <span class="path1"></span>
                    <span class="path2"></span>
                </i>
                <input type="text" data-kt-user-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Search branch">
            </div>
            <!--end::Search-->
        </div>
        <!--begin::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Toolbar-->
            <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">

                <!--begin::Add user-->
                <button type="button" class="btn btn-primary" onclick="AddOrUpdate(0)">
                    <i class="ki-duotone ki-plus fs-2"></i>Add Branch
                </button>

                @*@Html.ActionLink("Add Branch", "AddBranch", "Branches", null, new{ @type="button", @class="btn btn-primary", @data_bs_toggle="modal",  @onclick="LoadAddBranchPartialView()" })*@

                <!--end::Add user-->
            </div>
            <!--end::Toolbar-->

        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body py-4">
        <!--begin::Table-->
        <div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_table_branch">
                    <thead>
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">

                            <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_branch" rowspan="1" colspan="1" aria-label="Company: activate to sort column ascending">

                                <a asp-action="Index" asp-route-sortExpression="@sorting?.GetColumn("CompanyName").SortExpression" class="text-gray-800">
                                    Company
                                </a>
                                <i class="@sorting?.GetColumn("CompanyName").SortIcon text-info" arial-hidden="true"></i>
                            </th>
                            <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_branch" rowspan="1" colspan="1" aria-label="Branch Code: activate to sort column ascending">
                                <a asp-action="Index" asp-route-sortExpression="@sorting?.GetColumn("BranchCode").SortExpression" class="text-gray-800">
                                    Branch Code
                                </a>
                                <i class="@sorting?.GetColumn("BranchCode").SortIcon text-info" arial-hidden="true"></i>
                            </th>
                            <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_branch" rowspan="1" colspan="1" aria-label="Location: activate to sort column ascending">
                                <a asp-action="Index" asp-route-sortExpression="@sorting?.GetColumn("Location").SortExpression" class="text-gray-800">
                                    Location
                                </a>
                                <i class="@sorting?.GetColumn("Location").SortIcon text-info" arial-hidden="true"></i>
                            </th>
                            <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_branch" rowspan="1" colspan="1" aria-label="Address: activate to sort column ascending">
                                <a asp-action="Index" asp-route-sortExpression="@sorting?.GetColumn("Address").SortExpression" class="text-gray-800">
                                    Address
                                </a>
                                <i class="@sorting?.GetColumn("Address").SortIcon text-info" arial-hidden="true"></i>
                            </th>
                            <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_branch" rowspan="1" colspan="1" aria-label="Created Date: activate to sort column ascending">
                                <a asp-action="Index" asp-route-sortExpression="@sorting?.GetColumn("CreatedDate").SortExpression" class="text-gray-800">
                                    Created Date
                                </a>
                                <i class="@sorting?.GetColumn("CreatedDate").SortIcon text-info" arial-hidden="true"></i>
                            </th>
                            <th class="text-end min-w-125px sorting_disabled" rowspan="1" colspan="1" aria-label="Actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold">
                        @if (Model.List != null)
                        {
                            @foreach (var item in Model.List)
                            {
                                <tr id="TR_@item.BranchCode">

                                   <partial name="_ListBranch" model="@item"></partial>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div><div class="row">
                <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start">
                    <span>
                        Showing page @Model.PageIndex of @(
                        Model.TotalRecords < Model.PageSize ? Model.PageIndex : ((Model.TotalRecords - 1) / Model.PageSize) + 1
                        ) pages (out of total @Model.TotalRecords records)
                    </span>
                </div>
                <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                    <div class="dataTables_paginate paging_simple_numbers" id="kt_table_users_paginate">
                        <ul class="pagination">
                            <li class="paginate_button page-item previous disabled" id="kt_table_users_previous">
                                <a href="/" aria-controls="kt_table_users" data-dt-idx="0" tabindex="0" class="page-link">
                                    <i class="previous"></i>
                                </a>
                            </li>
                            <li class="paginate_button page-item active">
                                <a href="/" aria-controls="kt_table_users" data-dt-idx="1" tabindex="0" class="page-link">1</a>
                            </li>
                            <li class="paginate_button page-item ">
                                <a href="/" aria-controls="kt_table_users" data-dt-idx="2" tabindex="0" class="page-link">2</a>
                            </li>
                            <li class="paginate_button page-item ">
                                <a href="/" aria-controls="kt_table_users" data-dt-idx="3" tabindex="0" class="page-link">3</a>
                            </li>
                            <li class="paginate_button page-item next" id="kt_table_users_next">
                                <a href="/" aria-controls="kt_table_users" data-dt-idx="4" tabindex="0" class="page-link">
                                    <i class="next"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Table-->
    </div>
    <!--end::Card body-->
</div>

<!--begin::Modal - Add Update Branch-->
<div class="modal fade" id="kt_modal_branch" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_add_header">
                <!--begin::Modal title-->
                <h2 id="title" class="fw-bold">Add Branch</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-toggle="modal">
                    <i class="ki-duotone ki-cross fs-1">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7" id="addModelBody">
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Add Update Branch-->
@section Scripts{
    <script src="custom/js/branches/branchescrud.js"></script>
}

