@using WebApp.DTOs.Branches.Response;
@model BranchResponseDto

<td class="table-td-padding-75rem">@Model.CompanyName</td>
<td class="table-td-padding-75rem">

    <!--begin::User details-->
    @if (Model.IsActive)
    {
    <button type="button" onclick="AddOrUpdate(@Model.Id)" class="text-gray-800 text-hover-primary mb-1 btn-backgroud-none-border-none">
        @Model.BranchCode</button>

    
        <span class="badge badge-light-success fw-bold align-center">@Model.Status</span>
    }
    else
    {
        <button type="button" class="text-gray-800 text-hover-primary mb-1 btn-backgroud-none-border-none">
            @Model.BranchCode
        </button>

        <span class="badge badge-light-danger fw-bold align-center">@Model.Status</span>
    }
    <!--begin::User details-->
</td>
<td class="table-td-padding-75rem">@Model.Location</td>
<td class="table-td-padding-75rem">
    @Model.Address
</td>

<td class="table-td-padding-75rem">@Model.CreatedDate</td>
<td class="text-end table-td-padding-75rem">
    <a href="/" class="btn btn-light btn-active-light-primary btn-flex btn-center btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
        Actions
        <i class="ki-duotone ki-down fs-5 ms-1"></i>
    </a>
    <!--begin::Menu-->
    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">

        @if (Model.IsActive)
        {
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <button type="button" id="btnEdit" class="menu-link px-3 btn-backgroud-none-border-none-width-100" onclick="AddOrUpdate(@Model.Id)">Edit</button>
            </div>
        }
        <!--end::Menu item-->

        <div class="menu-item px-3">
            <form id="activeBranchForm">

                <button type="button" id="btnStatus" class="menu-link px-3 btn-backgroud-none-border-none-width-100" onclick="changeStatusConfirmation(@Model.Id)">
                    @if (Model.IsActive)
                    {
                        <span>Inactive</span>
                    }
                    else
                    {
                        <span>Active</span>
                    }
                </button>

            </form>
        </div>
        @if (Model.IsActive)
        {
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <form id="deleteBranchForm">
                    <button type="button" id="btnDelete" class="menu-link px-3 btn-backgroud-none-border-none-width-100" onclick="deleteConfirmation(@Model.Id)">Delete</button>
                </form>
            </div>
            <!--end::Menu item-->
        }
    </div>
    <!--end::Menu-->
</td>