@using WebApp.DTOs.CompanyInfo.Request;
@{
    ViewData["Title"] = "Company Profile";
    Layout = "_Layout";
}

@model AddorUpdateCompanyInfoRequestDto

<div class="card mb-5 mb-xl-10">
    <!--begin::Card header-->
    <div class="card-header border-0 cursor-pointer" role="button" data-bs-toggle="collapse" data-bs-target="#kt_account_profile_details" aria-expanded="true" aria-controls="kt_account_profile_details">
        <!--begin::Card title-->
        <div class="card-title m-0">
            <h3 class="fw-bold m-0">Company Profile Details</h3>
        </div>
        <!--end::Card title-->
    </div>
    <!--begin::Card header-->
    <!--begin::Content-->
    <div id="kt_account_settings_profile_details" class="collapse show">
        <!--begin::Form-->
        @using (Html.BeginRouteForm("PostCompanyProfile", FormMethod.Post, new { @id = "kt_account_profile_details_form", @class = "form fv-plugins-bootstrap5 fv-plugins-framework" }))
        {
            @Html.AntiForgeryToken()

            <!--begin::Card body-->
            <div class="card-body border-top p-9">

                <!--begin::Input group-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label required fw-semibold fs-6">Company Name</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row fv-plugins-icon-container">
                        @Html.TextBoxFor(m=> m.Name, new {@type="text", @placeholder="Company Name", @name="Name", @autocomplete="off", @class="form-control form-control-lg"})

                    </div>
                    <!--end::Col-->
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label fw-semibold fs-6">
                        <span class="required">Company Email</span>

                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row fv-plugins-icon-container">
                        @Html.TextBoxFor(m=> m.Email, new { @type = "email", @placeholder="Company Email", @name="Email", @autocomplete="off", @class="form-control form-control-lg"})
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::Input group-->
                <!--begin::Input group-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label fw-semibold fs-6">
                        <span class="required">Contact Phone</span>

                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row fv-plugins-icon-container">
                        @Html.TextBoxFor(m=> m.Phone, new { @type = "tel", @placeholder="Phone number", @name="Phone", @autocomplete="off", @class="form-control form-control-lg"})
                    </div>
                    <!--end::Col-->
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label fw-semibold fs-6">Company Site</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row">
                        @Html.TextBoxFor(m=> m.Website, new { @value= " " , @type = "text", @placeholder="Company Website", @name="Website", @autocomplete="off", @class="form-control form-control-lg"})
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::Input group-->
                <!--begin::Input group-->
                <div class="row mb-6">
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label fw-semibold fs-6">Company Fax</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row">
                        @Html.TextBoxFor(m=> m.Fax, new { @value= " ", @type = "text", @placeholder="Company Fax", @name="Fax", @autocomplete="off", @class="form-control form-control-lg"})
                    </div>
                    <!--end::Col-->
                    <!--begin::Label-->
                    <label class="col-lg-2 col-form-label required fw-semibold fs-6">Company Address</label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-4 fv-row">
                        @Html.TextAreaFor(m=> m.Address, new { @type = "text", @placeholder="Company Address", @name="Address", @autocomplete="off", @class="form-control form-control-lg"})
                    </div>
                    <!--end::Col-->
                </div>
                <!--end::Input group-->

            </div>
            <!--end::Card body-->
            <!--begin::Actions-->
            <div class="card-footer d-flex justify-content-end py-6 px-9">
                <button type="reset" class="btn btn-light btn-active-light-primary me-2">Discard</button>
                <button type="submit" class="btn btn-primary" id="kt_account_profile_details_submit">Save Changes</button>
            </div>
            <!--end::Actions-->
            <input type="hidden">

        }
        <!--end::Form-->
    </div>
    <!--end::Content-->
</div>