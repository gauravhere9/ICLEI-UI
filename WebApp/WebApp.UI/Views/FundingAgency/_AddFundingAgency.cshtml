@using WebApp.DTOs.FundingAgency.Request;
@model AddFundingAgencyRequestDto

<!--begin::Form-->
 
<form id="addForm" method="POST">

    <!--begin::Scroll-->
    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_header" data-kt-scroll-wrappers="#kt_modal_add_scroll" data-kt-scroll-offset="300px" style="max-height: 460px;">
        
        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="required fw-semibold fs-6 mb-2">Name</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextBoxFor(m=> m.Name, new { @type="text", @name="Name", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Name", @value="", @tabindex=1})

            <!--end::Input-->

            <span id="errorName" class="text-danger"></span>
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="fw-semibold fs-6 mb-2">Description</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextBoxFor(m=> m.Description, new { @type="text", @name="Description", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Description", @value="", @tabindex=2})

            <!--end::Input-->
        </div>
        <!--end::Input group-->


        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="required fw-semibold fs-6 mb-2">Contact Person</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextBoxFor(m=> m.ContactPerson, new { @type="text", @name="ContactPerson", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Contact Person", @value="", @tabindex=3})

            <!--end::Input-->

            <span id="errorContactPerson" class="text-danger"></span>
        </div>
        <!--end::Input group-->
        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="fw-semibold fs-6 mb-2">Email</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextBoxFor(m=> m.Email, new { @type="email", @name="Email", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Email", @value="", @tabindex=4})

            <!--end::Input-->
        </div>
        <!--end::Input group-->

        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="fw-semibold fs-6 mb-2">Phone</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextBoxFor(m=> m.Phone, new { @type="text", @name="Phone", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Phone", @value="", @tabindex=5})

            <!--end::Input-->
        </div>
        <!--end::Input group-->
 

        <!--begin::Input group-->
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <!--begin::Label-->
            <label class="required fw-semibold fs-6 mb-2">Address</label>
            <!--end::Label-->
            <!--begin::Input-->
            @Html.TextAreaFor(m=> m.Address, new { @type="text", @name="Address", @class="form-control form-control-solid mb-3 mb-lg-0",
            @placeholder="Address", @value="", @tabindex=4})

            <!--end::Input-->

            <span id="errorAddress" class="text-danger"></span>
        </div>
        <!--end::Input group-->
    </div>
    <!--end::Scroll-->
    <!--begin::Actions-->
    <div class="text-center pt-15">
        <button type="button" class="btn btn-light me-3" data-bs-toggle="modal" tabindex=5>Discard</button>
        <button id="btnSubmit" type="button" class="btn btn-primary" tabindex=6>
            <span class="indicator-label">Submit</span>
            <span class="indicator-progress">
                Please wait...
                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
            </span>
        </button>
    </div>
    <!--end::Actions-->

</form>
 